{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!mksaas_template-main-sorce",
      "!**/.next",
      "!**/.open-next",
      "!**/.wrangler",
      "!**/.cursor",
      "!**/.claude",
      "!**/.kiro",
      "!**/.vscode",
      "!**/.source",
      "!**/.pnpm-store",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/src/db",
      "!**/tailwind.config.ts",
      "!**/src/components/ui/**/*.tsx",
      "!**/src/components/magicui/**/*.tsx",
      "!**/src/components/animate-ui/**/*.tsx",
      "!**/src/components/tailark/**/*.tsx",
      "!**/src/components/ai-elements/**/*.tsx",
      "!**/src/app/\\[\\[\\]locale\\]/preview",
      "!**/src/payment/types.ts",
      "!**/src/credits/types.ts",
      "!**/src/types/index.d.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "formatWithErrors": true,
    "useEditorconfig": true
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noSparseArray": "error",
        "noArrayIndexKey": "off",
        "noExplicitAny": "error",
        "noShadowRestrictedNames": "error",
        "noDuplicateCustomProperties": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noImportantStyles": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      },
      "performance": {
        "noImgElement": "off"
      },
      "style": {
        "useTemplate": "warn",
        "noNonNullAssertion": "error",
        "useNodejsImportProtocol": "off",
        "useConsistentArrayType": {
          "level": "off",
          "options": {
            "syntax": "shorthand"
          }
        }
      },
      "a11y": {
        "useValidAnchor": "warn",
        "noSvgWithoutTitle": "warn",
        "useKeyWithClickEvents": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "overrides": [
    {
      "includes": ["tests/**", "**/*.test.*", "**/*.spec.*"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "a11y": {
            "useValidAnchor": "off",
            "useKeyWithClickEvents": "off"
          }
        }
      }
    },
    {
      "includes": ["package.json"],
      "json": {
        "formatter": {
          "expand": "auto"
        }
      }
    },
    {
      "includes": [
        "src/lib/server/**",
        "src/db/**",
        "src/payment/data-access/**"
      ],
      "linter": {
        "rules": {
          "style": {
            "useNodejsImportProtocol": "error"
          }
        }
      }
    }
  ]
}
