{
  "$schema": "https://biomejs.dev/schemas/2.3.3/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/.next",
      "!**/.open-next",
      "!**/.wrangler",
      "!**/.cursor",
      "!**/.claude",
      "!**/.kiro",
      "!**/.vscode",
      "!**/.source",
      "!**/.pnpm-store",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/src/db",
      "!**/tailwind.config.ts",
      "!**/src/components/ui/**/*.tsx",
      "!**/src/components/magicui/**/*.tsx",
      "!**/src/components/animate-ui/**/*.tsx",
      "!**/src/components/tailark/**/*.tsx",
      "!**/src/components/ai-elements/**/*.tsx",
      "!**/src/app/\\[\\[\\]locale\\]/preview",
      "!**/src/payment/types.ts",
      "!**/src/credits/types.ts",
      "!**/src/types/index.d.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "formatWithErrors": true,
    "useEditorconfig": true
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "suspicious": {
        "noSparseArray": "off",
        "noArrayIndexKey": "off",
        "noExplicitAny": "off",
        "noShadowRestrictedNames": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "performance": {
        "noImgElement": "off"
      },
      "style": {
        "useTemplate": "off",
        "noNonNullAssertion": "off",
        "useNodejsImportProtocol": "off",
        "useConsistentArrayType": {
          "level": "off",
          "options": {
            "syntax": "shorthand"
          }
        }
      },
      "a11y": {
        "useValidAnchor": "off",
        "noSvgWithoutTitle": "off",
        "useKeyWithClickEvents": "off"
      }
    },
    "includes": [
      "**",
      "!**/.next",
      "!**/.open-next",
      "!**/.wrangler",
      "!**/.cursor",
      "!**/.claude",
      "!**/.kiro",
      "!**/.vscode",
      "!**/.source",
      "!**/.pnpm-store",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/src/db",
      "!**/tailwind.config.ts",
      "!**/src/components/ui/**/*.tsx",
      "!**/src/components/magicui/**/*.tsx",
      "!**/src/components/animate-ui/**/*.tsx",
      "!**/src/components/tailark/**/*.tsx",
      "!**/src/components/ai-elements/**/*.tsx",
      "!**/src/app/\\[\\[\\]locale\\]/preview",
      "!**/src/payment/types.ts",
      "!**/src/credits/types.ts",
      "!**/src/types/index.d.ts"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
